{
  "name": "cnc",
  "version": "0.0.1",
  "description": "Castles and Crusades RPG Support for Foundry VTT",
  "keywords": [
    "FoundryVTT",
    "CNC",
    "Castles and Crusades"
  ],
  "homepage": "https://github.com/switchspan/foundryvtt-cnc#readme",
  "bugs": {
    "url": "https://github.com/switchspan/foundryvtt-cnc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/switchspan/foundryvtt-cnc.git"
  },
  "license": "MIT",
  "author": "Ken Taylor <taylor.kenneth@gmail.com>",
  "main": "module/cnc.js",
  "directories": {
    "test": "module/tests"
  },
  "scripts": {
    "format": "standard --fix",
    "scss": "node-sass styles/cnc.scss styles/cnc.css",
    "test": "jest"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/module/__mocks__/foundry.js",
      "<rootDir>/module/__mocks__/item.js"
    ],
    "verbose": true
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.4",
    "babel-jest": "^26.1.0",
    "jest": "^26.1.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.2.1",
    "standard": "^14.3.4"
  }
}
